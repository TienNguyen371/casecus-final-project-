<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/png" href="/Productimage/casecuslogo.png">
  <title>Casecus</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Ancizar+Sans:ital,wght@0,100..1000;1,100..1000&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <link rel="stylesheet" href="/setup.css">
</head>

<body class="m-0 p-0" onload="AOS.init()">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
      <!-- Logo -->
      <a class="navbar-brand" href="/homepage.html">
        <img src="/Productimage/casecuslogo.png" alt="Logo" height="50">
      </a>

      <!-- Toggle menu -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Menu + Icons -->
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <!-- Main menu -->
        <ul class="navbar-nav mx-auto flex-column flex-lg-row text-center">
          <li class="nav-item"><a class="nav-link text-white active" href="/homepage.html#About_Us">About Us</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/productpage.html">iPhone Case</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/newsandevent.html">News and Event</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/contactpage.html">Contact Us</a></li>
        </ul>

        <!-- Right-side icons -->
        <ul class="navbar-nav d-flex flex-row align-items-center gap-3">
          <li class="nav-item">
            <a href="#" id="toggleSearch" class="text-white"><i class="fas fa-search fs-5"></i></a>
          </li>

          <% if (session && session.user) { %>
            <li class="nav-item text-white fw-bold">Hello <%= session.user.full_name %>
            </li>
            <li class="nav-item">
              <a href="/logout" class="text-white"><i class="fas fa-sign-out-alt fs-5"></i></a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="text-white" data-bs-toggle="offcanvas" href="#offcanvasLogin" role="button">
                  <i class="fas fa-user fs-5"></i>
                </a>
              </li>
              <% } %>
                <li class="nav-item">
                  <a class="text-white" href="/view-cart"><i class="fas fa-shopping-bag fs-5"></i></a>
                </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Search Bar -->
  <div id="searchBar" style="display: none;">
    <form action="/search" method="GET" class="d-flex justify-content-center">
      <input type="text" name="query" class="form-control" placeholder="Search Casecus..." required
        style="max-width: 300px;">
      <button type="submit" class="btn btn-outline-light ms-2">Search</button>
    </form>
  </div>

  <!-- Hero Section -->
  <header>
    <section class="hero-section text-center text-white d-flex align-items-center justify-content-center"
      data-aos="fade-up">
      <div class="container">
        <h1 id="heroTitle" class="display-3 fw-bold">Casecus</h1>
        <p id="heroTitle" class="lead">Indulge your phone with premium care</p>
        <a id="heroTitle" href="/productpage.html" class="btn btn-outline-light btn-lg mt-3">Order Now</a>
      </div> 
    </section>
  </header>

  <!-- About Us -->
  <section class="about-us-section py-5 min-vh-100 d-flex align-items-center" id="About_Us">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0 text-center" data-aos="fade-right">
          <img src="/Productimage/AboutUs.png" alt="Phone Case" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6 d-flex flex-column justify-content-center">
          <h2 class="fw-bold mb-4">About Us</h2>
          <div class="scroll-char-fade"
            data-text="At Casecus, we create phone cases that combine fashion and protection. Each design is made to reflect your personality while keeping your device safe. Our mission is to help you stay stylish every day with accessories that match your lifestyle.">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Brand Layout -->
  <section class="brand-layout-section">
    <div class="brand-layout-container">
      <div class="left-img parallax-img"><img src="/Productimage/home1.png" alt="Main Feature" /></div>
      <div class="center-logo"><img src="/Productimage/casecuslogo.png" alt="Casecus Logo" class="logo-image"></div>
      <div class="right-img-stack">
        <div class="small-img parallax-img"><img src="/Productimage/home2.png" alt="Feature Right Top" /></div>
        <div class="small-img parallax-img"><img src="/Productimage/home3.png" alt="Feature Right Bottom" /></div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <div>
    <h5 class="display-4 text-center fw-bold mb-4" data-aos="zoom-in">Why Choose Us</h5>
    <div class="image-container">
      <div class="image-row">
        <img src="/Productimage/feature1.png" class="feature-img" data-aos="zoom-in-up" />
        <img src="/Productimage/feature2.png" class="feature-img" data-aos="zoom-in-up" />
        <img src="/Productimage/feature3.png" class="feature-img" data-aos="zoom-in-up" />
        <img src="/Productimage/feature4.png" class="feature-img" data-aos="zoom-in-up" />
        <img src="/Productimage/feature5.png" class="feature-img" data-aos="zoom-in-up" />
        <img src="/Productimage/feature6.png" class="feature-img" data-aos="zoom-in-up" />
        <img src="/Productimage/feature7.png" class="feature-img" data-aos="zoom-in-up" />
      </div>
    </div>
  </div>

  <section id="thumbnails" class="container text-center py-5">
    <div class="row justify-content-center g-4">
      <!-- Product 1 -->
      <div class="col-md-4" data-aos="zoom-in-up">
        <div class="card h-100 border-0 shadow-sm">
          <img src="/Productimage/product1.png" class="card-img-top img-fluid p-3" alt="The Acrylics">
          <div class="card-body" id="MatteBlackCase">
            <h5 class="card-title fw-bold">Matte Black Case</h5>
            <p class="card-text text-muted mb-1">Abstract color-block style with soft matte</p>
            <p class="text-dark fw-semibold">$45.99 AUD</p>
            <div class="d-flex justify-content-center mb-2">
              <button class="btn btn-outline-secondary me-2" onclick="toggleInfo('info1')">View More</button>
              <a href="/product1" class="btn btn-outline-dark">Buy Now</a>
            </div>
            <div id="info1" class="extra-info text-start" style="display: none;">
              <p><strong>Feature:</strong> Textured surface for extra grip</p>
              <p><strong>Material:</strong> Matte polycarbonate</p>
              <p><strong>Design:</strong> Slim and durable with raised edges</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Product 2 -->
      <div class="col-md-4" data-aos="zoom-in-up">
        <div class="card h-100 border-0 shadow-sm">
          <img src="/Productimage/product2.png" class="card-img-top img-fluid p-3" alt="The Love">
          <div class="card-body" id="CrystalClearCase">
            <h5 class="card-title fw-bold">Crystal Clear Case</h5>
            <p class="card-text text-muted mb-1">Showing your phone's original design while staying protected</p>
            <p class="text-dark fw-semibold">$49.99 AUD</p>
            <div class="d-flex justify-content-center mb-2">
              <button class="btn btn-outline-secondary me-2" onclick="toggleInfo('info2')">View More</button>
              <a href="/product2" class="btn btn-outline-dark">Buy Now</a>
            </div>
            <div id="info2" class="extra-info text-start" style="display: none;">
              <p><strong>Feature:</strong> Shockproof edge protection</p>
              <p><strong>Material:</strong> Flexible TPU</p>
              <p><strong>Design:</strong> Lightweight, fully transparent</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Product 3 -->
      <div class="col-md-4" data-aos="zoom-in-up">
        <div class="card h-100 border-0 shadow-sm">
          <img src="/Productimage/product3.png" class="card-img-top img-fluid p-3" alt="The Minimalist">
          <div class="card-body" id="ElegantWalletCase">
            <h5 class="card-title fw-bold">Elegant Wallet Case</h5>
            <p class="card-text text-muted mb-1">Stylish protection with built-in card storage convenience</p>
            <p class="text-dark fw-semibold">$54.99 AUD</p>
            <div class="d-flex justify-content-center mb-2">
              <button class="btn btn-outline-secondary me-2" onclick="toggleInfo('info3')">View More</button>
              <a href="/product3" class="btn btn-outline-dark">Buy Now</a>
            </div>
            <div id="info3" class="extra-info text-start" style="display: none;">
              <p><strong>Feature:</strong> Card holder with magnetic lock</p>
              <p><strong>Material:</strong> Vegan leather</p>
              <p><strong>Design:</strong> Ultra-thin and lightweight</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Chatbot UI -->
  <div class="container py-4" style="max-width: 500px;">
    <h5 class="text-center fw-bold mb-2">Need help? Chat with Casecus Assistant 🤖</h5>
    <div id="chatLog"
      style="height: 200px; border: 1px solid #ccc; border-radius: 5px; padding: 10px; overflow-y: auto; background: #f9f9f9; margin-bottom: 10px;">
    </div>
    <input type="text" id="userInput" class="form-control" placeholder="Ask me..."
      onkeydown="if(event.key==='Enter') sendMessage()">
  </div>

  <!-- Offcanvas Login -->
  <% if (!(session && session.user)) { %>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasLogin">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Log In</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        <form id="loginForm" action="/login" method="POST" novalidate>
          <div class="mb-3">
            <label for="loginEmail" class="form-label fw-bold">Email:</label>
            <input type="email" class="form-control" id="loginEmail" name="email" required>
          </div>
          <div class="mb-3">
            <label for="loginPassword" class="form-label fw-bold">Password:</label>
            <input type="password" class="form-control" id="loginPassword" name="password" required>
          </div>
          <button type="submit" class="btn btn-dark w-100 rounded-pill">Log In</button>
        </form>
        <div class="mt-3 text-center">
          <p class="mb-0 small">Don't have an account? <a href="/signup.html" class="text-decoration-underline">Sign up
              here</a></p>
        </div>
      </div>
    </div>
    <% } %>

      <!-- Footer -->
      <footer id="footer" class="bg-dark text-white text-center py-4">
        <div class="container">
          <p class="mb-1">&copy; 2025 Casecus. All rights reserved.</p>
          <p class="mb-1">Last updated: <span id="lastUpdated"></span></p>
          <p class="mb-0">Contact us: <a href="mailto:support@casecus.com"
              class="text-white text-decoration-underline">support@casecus.com</a></p>
        </div>
      </footer>

      <!-- Scripts -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
      <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
      <script> AOS.init({ duration: 1000, once: false }); </script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
      <script src="/java.js"></script>
</body>

</html>